.container {
    padding: 16px;
    background: var(--secondary-color);
    min-height: 100vh;
  }
  
  .header {
    background: #ffffff;
    padding: 16px;
    border-radius: 12px;
    display: flex;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .university-logo {
    width: 80px;
    height: 80px;
    margin-right: 16px;
    border-radius: 8px;
  }
  
  .header-info {
    flex: 1;
  }
  
  .major-name {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 4px;
  }
  
  .major-name-en {
    font-size: 14px;
    color: var(--text-gray);
    margin-bottom: 8px;
  }
  
  .university-name {
    font-size: 16px;
    color: var(--text-color);
    margin-bottom: 4px;
  }
  
  .publish-time {
    font-size: 12px;
    color: var(--text-gray);
  }
  
  .section {
    background: #ffffff;
    padding: 16px;
    border-radius: 12px;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 12px;
    padding-left: 8px;
    border-left: 4px solid var(--primary-color);
  }
  
  .section-content {
    font-size: 14px;
    color: var(--text-color);
    line-height: 1.6;
    white-space: pre-wrap;
  }
  
  .timeline {
    padding: 8px 0;
  }
  
  .timeline-item {
    display: flex;
    margin-bottom: 12px;
    position: relative;
    padding-left: 20px;
  }
  
  .timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--primary-color);
  }
  
  .timeline-date {
    width: 80px;
    font-size: 14px;
    color: var(--text-gray);
  }
  
  .timeline-event {
    flex: 1;
    font-size: 14px;
    color: var(--text-color);
  }
  
  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    background: #ffffff;
    padding: 16px;
    border-radius: 12px;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .info-item {
    text-align: center;
  }
  
  .info-label {
    font-size: 14px;
    color: var(--text-gray);
    margin-bottom: 4px;
  }
  
  .info-value {
    font-size: 14px;
    color: var(--text-color);
    font-weight: 500;
  }
  
  .offer-image {
    width: 100%;
    height: 200px;
    border-radius: 8px;
  }
  
  .bottom-buttons {
    display: flex;
    gap: 16px;
    padding: 16px;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #ffffff;
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
    z-index: 100;
  }
  
  /* 重写按钮默认样式 */
  button {
    margin: 0 !important;
    padding: 0 !important;
    background: none;
  }
  
  .share-btn, .home-btn {
    flex: 1;
    height: 44px;
    line-height: 44px;
    border-radius: 22px;
    font-size: 16px;
    font-weight: 500;
    padding: 0;
    background-color: #42B983 !important;
    color: #ffffff !important;
    border: none !important;
  }
  
  /* 添加按钮点击效果 */
  .share-btn:active, .home-btn:active {
    opacity: 0.8;
  }
  
  /* 添加底部占位，防止内容被按钮遮挡 */
  .content-wrapper {
    padding-bottom: 92px;
  }
  
  /* 覆盖微信按钮的默认样式 */
  button::after {
    border: none !important;
  } 