.container {
    min-height: 100vh;
    background: var(--secondary-color);
  }
  
  .cases-list {
    flex: 1;
    height: calc(100vh - 54px);
    padding: 16px 0 32px 0;
  }
  
  .case-item {
    display: flex;
    padding: 12px;
    background: #ffffff;
    margin: 0 16px 16px 16px;
    border-radius: 12px;
    position: relative;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    height: 120px;
  }
  
  .university-logo {
    width: 20%;
    height: 100%;
    margin-right: 12px;
    object-fit: contain;
  }
  
  .case-info {
    flex: 1;
    min-width: 0;
    position: relative;
    padding-right: 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }
  
  .info-top {
    flex: 1;
  }
  
  .major-name {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .major-name-en {
    font-size: 14px;
    color: var(--text-gray);
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .university-name {
    font-size: 15px;
    color: var(--text-color);
    margin-bottom: 2px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .info-bottom {
    margin-top: auto;
  }
  
  .publish-time {
    font-size: 12px;
    color: var(--text-gray);
    margin-bottom: 2px;
  }
  
  .background-preview {
    font-size: 14px;
    color: var(--text-color);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .detail-arrow {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-gray);
    font-size: 14px;
  }
  
  .bottom-tip {
    text-align: center;
    padding: 16px;
    color: var(--text-gray);
    font-size: 14px;
    margin-bottom: 16px;
  } 