.container {
    min-height: 100vh;
    background: var(--secondary-color);
    padding: 16px;
  }
  
  .content {
    background: #ffffff;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .header {
    text-align: center;
    margin-bottom: 24px;
  }
  
  .logo {
    width: 120px;
    height: 120px;
    margin-bottom: 12px;
  }
  
  .slogan {
    font-size: 20px;
    font-weight: 600;
    color: var(--primary-color);
  }
  
  .main-content {
    margin-bottom: 32px;
  }
  
  .paragraph {
    font-size: 14px;
    line-height: 1.8;
    color: var(--text-color);
    margin-bottom: 16px;
    text-align: justify;
  }
  
  .content-image {
    width: 100%;
    margin: 16px 0;
    border-radius: 8px;
  }
  
  .projects {
    margin: 16px 0;
  }
  
  .project-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 12px;
  }
  
  .project-item {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-color);
    margin-bottom: 8px;
    padding-left: 12px;
    position: relative;
  }
  
  .project-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 8px;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--primary-color);
  }
  
  .footer {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding-top: 20px;
  }
  
  .info-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 16px;
    display: flex;
    align-items: center;
  }
  
  .info-item {
    font-size: 14px;
    color: var(--text-color);
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    padding: 8px 0;
  }
  
  .icon {
    width: 20px;
    height: 20px;
    margin-right: 8px;
  }
  
  /* 添加点击效果 */
  .info-item:active {
    opacity: 0.8;
  } 