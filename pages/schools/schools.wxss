.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background: var(--secondary-color);
  }
  
  /* 地区选项卡 */
  .region-tabs {
    white-space: nowrap;
    background: #fff;
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .tabs-container {
    display: inline-flex;
    padding: 12px 8px;
  }
  
  .region-tab {
    display: inline-block;
    padding: 8px 16px;
    margin: 0 4px;
    border-radius: 20px;
    font-size: 14px;
    color: #333333;
    background: #f5f5f5;
    transition: all 0.3s ease;
  }
  
  .region-tab.active {
    background: #42B983;
    color: #ffffff !important;
    font-weight: 500;
    box-shadow: 0 2px 8px rgba(66, 185, 131, 0.2);
  }
  
  .region-tab:hover {
    opacity: 0.9;
  }
  
  /* 搜索框 */
  .search-box {
    display: flex;
    padding: 12px 16px;
    background: #fff;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .search-input {
    flex: 1;
    height: 36px;
    background: #f5f5f5;
    border-radius: 18px;
    padding: 0 16px;
    font-size: 14px;
  }
  
  .search-btn {
    padding: 0 16px;
    line-height: 36px;
    color: var(--primary-color);
    font-size: 14px;
  }
  
  /* 学校列表 */
  .school-list {
    flex: 1;
    padding: 8px 0;
  }
  
  .school-item {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 16px;
    margin: 0 12px 12px 12px;
    border-radius: 12px;
    box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.05);
  }
  
  .school-logo {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    margin-right: 12px;
    background: #f5f5f5;
    object-fit: cover;
  }
  
  .school-info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .school-name {
    font-size: 16px;
    font-weight: 500;
    color: var(--text-color);
    margin-bottom: 6px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .school-location {
    font-size: 14px;
    color: var(--text-gray);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .detail-arrow {
    color: var(--primary-color);
    font-size: 14px;
    margin-left: 12px;
    padding-right: 4px;
    flex-shrink: 0;
  }
  
  /* 底部提示 */
  .bottom-tip {
    text-align: center;
    padding: 16px;
    color: var(--text-gray);
    font-size: 14px;
  }
  
  /* 空状态样式 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
  }
  
  .empty-icon {
    width: 120px;
    height: 120px;
    margin-bottom: 16px;
    opacity: 0.5;
  }
  
  .empty-text {
    font-size: 16px;
    color: var(--text-color);
    margin-bottom: 8px;
  }
  
  .empty-subtext {
    font-size: 14px;
    color: var(--text-gray);
  } 