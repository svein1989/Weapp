    background-color: var(--secondary-color);
  }
  
  .container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  
  .grid-container {
    background: #ffffff;
    padding: 18px;
    margin: 15px;
    border-radius: 16px;
    box-shadow: 2px 4px 12px rgba(66, 185, 131, 0.08);
  }
  
  .grid-wrapper {
    width: 100%;
  }
  
  .grid-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16px;
  }
  
  .grid-row:last-child {
    margin-bottom: 0;
  }
  
  .grid-item {
    flex: 0 0 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding: 0 5px;
  }
  
  .grid-icon-box {
    width: 57.6px;
    height: 57.6px;
    background: var(--primary-gradient);
    border-radius: 14.4px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
  }
  
  .grid-text {
    font-size: 12px;
    color: var(--text-color);
    text-align: center;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* 覆盖 van-grid 默认样式 */
  .van-grid {
    margin: 0 !important;
  }
  
  .van-grid-item__content {
    padding: 0 !important;
  }
  
  .van-grid-item__content::after {
    border: none !important;
  }
  
  /* 其他样式保持不变 */
  .sub-pages {
    flex: 1;
    padding: 0 15px;
    box-sizing: border-box;
    width: 100%;
  }
  
  .sub-page-item {
    display: flex;
    align-items: center;
    background: #ffffff;
    padding: 16px;
    margin-bottom: 12px;
    border-radius: 16px;
    box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.05);
    width: auto;
    margin-right: 2px;
  }
  
  .sub-page-image {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    margin-right: 12px;
    flex-shrink: 0;
  }
  
  .sub-page-content {
    flex: 1;
    min-width: 0;
    padding-right: 12px;
  }
  
  .sub-page-title {
    font-size: 16px;
    color: var(--text-color);
    font-weight: 600;
    margin-bottom: 8px;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .sub-page-desc {
    font-size: 14px;
    color: var(--text-gray);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .sub-page-arrow {
    color: var(--primary-color);
    font-size: 20px;
    margin-left: auto;
    flex-shrink: 0;
  }
  
  .loading-status {
    text-align: center;
    padding: 20px;
    color: var(--text-gray);
    font-size: 14px;
  }
  
  /* 在现有样式中添加 */
  .grid-icon {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    width: 24px !important;
    height: 24px !important;
  }
  
  .grid-icon-box {
    width: 57.6px;
    height: 57.6px;
    background: var(--primary-gradient);
    border-radius: 14.4px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
  }
  
  /* 添加微信图标样式 */
  .wx-icon {
    display: inline-block;
    font-size: 24px;
    color: #ffffff;
  }
  
  .icon-search::before { content: '\e800'; }
  .icon-sort::before { content: '\e801'; }
  .icon-comment::before { content: '\e802'; }
  .icon-edit::before { content: '\e803'; }
  .icon-time::before { content: '\e804'; }
  .icon-copy::before { content: '\e805'; }
  .icon-service::before { content: '\e806'; }
  .icon-video::before { content: '\e807'; }
  
  .grid-icon-image {
    width: 28.8px;
    height: 28.8px;
  }
   