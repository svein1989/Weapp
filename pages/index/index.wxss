.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background: #f7f8fa;
  }
  
  .grid-container {
    background: #ffffff;
    padding: 10px 0;
    margin-bottom: 10px;
  }
  
  .sub-pages {
    flex: 1;
    overflow-y: auto;
  }
  
  .sub-page-item {
    display: flex;
    align-items: center;
    background: #ffffff;
    padding: 15px;
    margin-bottom: 10px;
  }
  
  .sub-page-image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    margin-right: 12px;
  }
  
  .sub-page-content {
    flex: 1;
  }
  
  .sub-page-title {
    font-size: 16px;
    color: #333;
    margin-bottom: 6px;
    display: block;
  }
  
  .sub-page-desc {
    font-size: 14px;
    color: #999;
    display: block;
  }
  
  .sub-page-arrow {
    color: #ccc;
    font-size: 18px;
  }
  
  .loading-status {
    text-align: center;
    padding: 16px;
    color: #999;
    font-size: 14px;
  } 