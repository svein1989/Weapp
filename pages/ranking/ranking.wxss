.container {
    min-height: 100vh;
    background: var(--secondary-color);
    display: flex;
    flex-direction: column;
  }
  
  /* Logo区域 */
  .logo-section {
    width: 100vw;
    height: calc(100vw * 372 / 1080);
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    overflow: hidden;
    margin: 0;
    padding: 0;
    position: relative;
    left: 0;
  }
  
  .qs-logo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    margin: 0;
  }
  
  /* 表格区域 */
  .table-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin: 0;
    background: #fff;
  }
  
  /* 表头 */
  .table-header {
    display: flex;
    padding: 12px 0;
    background: rgba(66, 185, 131, 0.1);
    color: #42B983;
    font-weight: 500;
    position: sticky;
    top: 0;
    z-index: 1;
    border-bottom: 1px solid rgba(66, 185, 131, 0.2);
  }
  
  /* 表头文字 */
  .th {
    padding: 0 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
  }
  
  /* 表格内容 */
  .table-body {
    flex: 1;
  }
  
  .table-row {
    display: flex;
    padding: 12px 0;
    border-bottom: 1px solid #f5f5f5;
    background: #fff;
  }
  
  .table-row:active {
    background: #f9f9f9;
  }
  
  /* 列样式 */
  .th, .td {
    padding: 0 8px;
    display: flex;
    align-items: center;
  }
  
  .rank-col {
    flex: 0 0 60px;
    justify-content: center;
  }
  
  .university-col {
    flex: 1;
  }
  
  .region-col {
    flex: 0 0 80px;
    justify-content: center;
  }
  
  .trend-col {
    flex: 0 0 80px;
    justify-content: center;
  }
  
  /* 升降趋势样式 */
  .trend {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
  }
  
  .trend.up {
    color: #f56c6c;
  }
  
  .trend.down {
    color: #67c23a;
  }
  
  .trend.same {
    color: #909399;
  }
  
  /* 底部提示 */
  .bottom-tip {
    text-align: center;
    padding: 16px;
    color: var(--text-gray);
    font-size: 14px;
  } 