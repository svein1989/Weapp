    height: 48px;
    background: var(--primary-gradient);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
  }
  
  .grid-item-text {
    font-size: 12px;
    color: var(--text-color);
    text-align: center;
    width: 100%;
    padding: 0 4px;
    box-sizing: border-box;
  }
   